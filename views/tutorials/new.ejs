<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add a New Coding Tutorial</h1>
        <div class="col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <form action="/tutorials/" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input class="form-control" type="text" name="title" placeholder="Your title goes here..." required>
                </div>
                <div class="form-group">
                  <label for="content">Content:</label>
                  <textarea class="form-control" rows="20" name="content" id="content" placeholder="Your tutorial goes here..." required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Add Your Tutorial!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
