<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= tutorial.title %></h1>
        <div class="col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
            <form action="/tutorials/<%= tutorial._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="tutorial[title]">Title:</label>
                    <input class="form-control" type="text" value="<%= tutorial.title %>" name="tutorial[title]" required>
                </div>
                <div class="form-group">
                    <label for="tutorial[content]">Content:</label>
                    <textarea class="form-control" rows="20" name="tutorial[content]" id="content" required>
                        <%= tutorial.markdown %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Update Tutorial</button>
                </div>
            </form>
            <a href="/tutorials/<%= tutorial._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>