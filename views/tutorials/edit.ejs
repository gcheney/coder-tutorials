<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= tutorial.title %></h1>
        <div class="form">
            <form action="/tutorials/<%= tutorial._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input class="form-control" type="text" name="tutorial[title]" value="<%= tutorial.title %>">
                </div>
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea class="form-control" rows="5" name="tutorial[content]" id="content">
                        <%= tutorial.content %>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Save Changes</button>
                </div>
            </form>
            <a href="/tutorials/<%= tutorial._id %>">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>