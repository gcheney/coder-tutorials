<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <h1 class="text-center">Add a New Review for <%= tutorial.name %></h1>
            <form action="/tutorials/<%= tutorial._id %>/reviews" method="POST">
                <div class="form-group">
                  <label for="review[content]">Type your Review:</label>
                  <textarea class="form-control" rows="5" name="review[content]" id="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Add Review</button>
                </div>
            </form>
            <a class="btn btn-primary" href="/tutorials/<%= tutorial._id %>"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
