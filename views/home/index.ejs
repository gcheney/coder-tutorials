<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Coder Tutorials</h1>
            <p>View our user provided selection of coding tutorials and advice from all over the world. If you know of a good tutorial that should be here, feel free to add it!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/tutorials/new">Create a New Tutorial</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center">Recently Added Coder Tutorials</h3>
        </div>
    </div>
    
    <div class="row tutorial-list">
        <% tutorials.forEach(function(tutorial){ %>
                <div class="col-md-10 col-sm-9 col-md-offset-1 text-center">
                    <a href="/tutorials/<%= tutorial._id %>"><h3><%= tutorial.title %></h3></a>
                    <div class="row">
                        <div class="col-xs-9">
                            <h4><span class="label label-default"><%= tutorial.description %></span></h4>
                            <h4>
                                <small style="font-family:courier,'new courier';" class="text-muted">Posted on <%= tutorial.createdOn %> by <a href="#" class="text-muted"><%= tutorial.author.username %></a></small>
                            </h4>
                        </div>
                    </div>
                </div>
            <hr>
        <% }); %>
    </div>
</div>
<% include ../partials/footer %>
