<div class="row tutorial-list">
    <% tutorials.forEach(function(tutorial){ %>
            <div class="col-md-10 col-sm-9 col-md-offset-1 text-center">
                <a href="/tutorials/<%= tutorial._id %>"><h3><%= tutorial.title %></h3></a>
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 text-center">
                        <h4><span class="label label-default"><%= tutorial.description %></span></h4>
                        <h4>
                            <small class="text-muted">
                            <% if (tutorial.editedOn) { %>
                                Edited on <%= moment(tutorial.editedOn).format('MMMM Do YYYY, h:mm a') %>
                            <% } else { %>
                                Created on <%= moment(tutorial.createdOn).format('MMMM Do YYYY, h:mm a') %>
                            <% } %>
                                by <a href="/user/<%= tutorial.author.username %>"><%= tutorial.author.username %></a>
                            </small>
                        </h4>
                        <% if (currentUser && tutorial.author.id.equals(currentUser._id)) { %>
                            <% if (tutorial.isPublished) { %>
                                <h4 class="text-success">Published</h4>
                            <% } else { %>
                                <h4 class="text-danger">Unpublished</h4>
                            <% } %>
                            <a href="/tutorials/<%= tutorial._id %>/edit" class="btn btn-warning">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit Tutorial
                            </a>      
                        <% } %>
                    </div>
                </div>
            </div>
        <hr>
    <% }); %>
</div>