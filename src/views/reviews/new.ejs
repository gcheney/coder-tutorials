<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <div class="text-center">
                <h1>Add a New Review for <%= tutorial.name %></h1>
                <p class="text-center">We support <a href="https://daringfireball.net/projects/markdown/syntax" target="_blank">Markdown</a></p>
            </div>
            <div class="well clearfix">
                <button class="btn btn-md btn-default pull-right" id="btn-preview" data-toggle="modal" data-target="#preview-modal">Preview</button>
                <form action="/tutorials/<%= tutorial._id %>/reviews" method="POST" id="review-form">
                    <div class="form-group">
                      <label for="markdown">Type your Review:</label>
                      <textarea class="form-control" rows="5" name="markdown" id="markdown" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Add Review</button>
                    </div>
                </form>
                <a class="btn btn-primary" href="/tutorials/<%= tutorial._id %>"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>
            </div>
        </div>
        
        <% include ../partials/preview-modal %>
        
    </div>
</div>

<% include ../partials/footer %>
