<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <div class="text-center">
                <h1>Edit Your Review for <%= tutorial.title %></h1>
                <p class="text-center">We support <a href="https://daringfireball.net/projects/markdown/syntax" target="_blank">Markdown</a></p>
            </div>
            <div class="well clearfix">
                <button class="btn btn-md btn-default pull-right" id="btn-preview" data-toggle="modal" data-target="#preview-modal">Preview</button>
                <form action="/tutorials/<%= tutorial._id %>/reviews/<%= review._id %>?_method=PUT" method="POST" id="review-form">
                    <div class="form-group">
                      <label for="markdown">Edit your Review:</label>
                      <textarea class="form-control" rows="5" name="markdown" id="markdown" required><%= review.markdown %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-md btn-success pull-right" type="submit">Update Review</button>
                    </div>
                </form>
                <a class="btn btn-primary btn-md pull-left" href="/tutorials/<%= tutorial._id %>"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>
            </div>
        </div>
        
        <% include ../partials/preview-modal %>
        
    </div>
</div>
<% include ../partials/footer %>
