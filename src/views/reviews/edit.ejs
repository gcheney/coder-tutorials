<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
            <h2 class="text-center">Change your Review for <%= tutorial.name %></h2>
            <form action="/tutorials/<%= tutorial._id %>/reviews/<%= review._id %>?_method=PUT" method="POST" id="review-form">
                <div class="form-group">
                  <label for="content">Edit your Review:</label>
                  <textarea class="form-control" rows="5" name="markdown" id="description" required><%= review.markdown %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Update Review</button>
                </div>
            </form>
            <a class="btn btn-primary" href="/tutorials/<%= tutorial._id %>"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
