<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="well clearfix">
                <h1 class="text-center">Sign In To Coder Tutorials</h1>
                <form id="login-form" action="/account/login" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="username" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="password" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
                    </div>
                </form>
                <p class="text-center">- or -</p>
                <a href="/account/github" class="btn btn-default btn-lg btn-block"><i class="fa fa-github" aria-hidden="true"></i> Login with Github</a>
                <hr>
                <p><a href="/" >Go Back</a></p>
                <p>Don't have an accout? <a href="/account/signup">Sign up here!</a></p>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>


