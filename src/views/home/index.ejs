<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Coder Tutorials</h1>
            <h2>For Coders. By Coders.</h2>
            <p>View our user provided selection of coding tutorials and advice from all over the world. If you know of a good tutorial that should be here, feel free to add it!</p>
            <p>
                <% if (currentUser) { %>
                    <a class="btn btn-primary btn-lg text-center" href="/tutorials/create">Create a New Tutorial</a>
                <% } else { %>
                    <div class="text-center">
                        <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#loginModal">Sign In</button>
                        <button class="btn btn-success btn-lg" data-toggle="modal" data-target="#signUpModal">Sign Up</button>
                    </div>
            
                    <!-- Login Modal -->
                    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Login Modal Header -->
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">
                                           <i class="fa fa-times" aria-hidden="true"></i>
                                           <span class="sr-only">Close</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">
                                        Sign In To Coder Tutorials
                                    </h4>
                                </div>

                                <!-- Login Modal Body -->
                                <div class="modal-body">
                                    <form action="/account/login" method="POST" id="login-form"  class="form-horizontal">
                                        <div class="form-group">
                                            <label  class="col-sm-2 control-label" for="username">Username</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" name="username" placeholder="Username"/>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="inputPassword3" >Password</label>
                                                <div class="col-sm-10">
                                                    <input type="password" class="form-control" name="password"  placeholder="Password"/>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10 text-center">
                                                <button type="submit" class="btn btn-lg btn-primary">Sign in</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                                <!-- Login Modal Footer -->
                                <div class="modal-footer">
                                    <p class="pull-left">Don't have an accout yet? 
                                        <button class="btn btn-success" data-dismiss="modal" data-toggle="modal" data-target="#signUpModal">Sign up!</button>
                                    </p>
                                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Login Modal End -->
            
                    <!-- Sign Up Modal -->
                    <div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">
                                           <i class="fa fa-times" aria-hidden="true"></i>
                                           <span class="sr-only">Close</span>
                                    </button>
                                    <h4 class="modal-title" id="myModalLabel">
                                        Sign Up For Coder Tutorials
                                    </h4>
                                </div>

                                <!-- Sign Up Modal Body -->
                                <div class="modal-body">
                                    <form action="/account/signup" method="POST" id="signup-form" class="form-horizontal">
                                        <div class="form-group">
                                            <label  class="col-sm-2 control-label" for="username">Username</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" name="username" placeholder="Username"/>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="inputPassword3" >Password</label>
                                                <div class="col-sm-10">
                                                    <input type="password" class="form-control" name="password"  placeholder="Password"/>
                                                </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-sm-offset-2 col-sm-10 text-center">
                                                <button type="submit" class="btn btn-lg btn-success">Sign Up</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>

                                <!-- Sign Up Modal Footer -->
                                <div class="modal-footer">
                                    <p class="pull-left">Already have an account? 
                                        <button class="btn btn-primary" data-dismiss="modal" data-toggle="modal" data-target="#loginModal">Sign In!</button>
                                    </p>
                                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Sign Up Modal End -->
                <% } %>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-center">Recently Added Coder Tutorials</h1>
        </div>
    </div>
    
    <% include ../partials/tutorial-list %>
    
</div>
<% include ../partials/footer %>
